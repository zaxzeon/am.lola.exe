local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Regretevator Script By PackgodJR",
    SubTitle = "For ChaoticJR",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Light",
    MinimizeConfig = {
        SideTabs = true
    }
})

local Tabs = {
    Level = Window:AddTab({ Title = "Level", Icon = "gamepad-2" }),
    Coins = Window:AddTab({ Title = "Coins", Icon = "bitcoin" }),
    Other = Window:AddTab({ Title = "Other", Icon = "package" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

local AutoLevel = Tabs.Level:AddToggle("AutoLevel", {
    Title = "Auto Level",
    Default = false,
    Callback = function(Value)
        _G.AutoLevel = Value
        while _G.AutoLevel and task.wait() do
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            
            -- Get the elevator model/part
            local elevator = workspace:FindFirstChild("Elevator")
            if elevator then
                -- Teleport to next level trigger
                local nextLevel = workspace:FindFirstChild("NextLevel")
                if nextLevel then
                    character:PivotTo(nextLevel.CFrame)
                end
                
                -- Complete current level
                local complete = workspace:FindFirstChild("Complete")
                if complete then
                    character:PivotTo(complete.CFrame)
                end
                
                -- Wait for level transition
                task.wait(1)
            end
        end
    end
})
